@{
    ViewBag.Title = "User Management";
    ViewBag.ViewHeader = "Edit User";
}
<link href="~/Content/SlimImageCropper/slim.css" rel="stylesheet" />
@if (User.IsInRole("Admin"))
{
    Layout = "~/Areas/Admin/Views/Shared/_RealEstate.cshtml";
}
