@model IEnumerable<RealEstate.Web.Models.RoleViewModel>

@{
    ViewBag.Title = "Roles List";
    Layout = "~/Areas/Admin/Views/Shared/_RealEstate.cshtml";
}
<section class="content-header">
    <h1>
        Roles
        <small>List Roles</small>
    </h1>
</section>
<section class="content">
    <div class="col-md-12">
        <div class="well well-sm">
            <div class="col-md-3 pull-right">
                @Html.ActionLink(" Add Roles ", "create", null, new { @class = "btn btn-primary pull-right" })
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-condensed table-bordered">
                <thead>
                    <tr>
                        <th class="text-center" style="vertical-align: middle;">
                            @Html.DisplayNameFor(model => model.RoleName)
                        </th>
                        <th class="text-center" style="vertical-align: middle;">
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th class="text-center" style="vertical-align: middle;">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                        <tr>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.RoleName)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td class="text-center">
                                @Html.ActionLink("Edit", "Edit", new { id = item.RoleName }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.RoleName })
                            </td>
                        </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-12" style="display:none" id="allList">
        <a href="@Url.Action("list","useradmin")">Show All Entries</a>
    </div>
</section>