@model RealEstate.Web.Models.UserListViewModel
<div id="DataGrid" class="col-md-12">
    @if (Model.UserList.Count() > 0)
    {
        <div class="table-responsive">
            <table class="table table-striped table-condensed table-bordered">
                <thead>
                    <tr>
                        <th class="text-center" style="vertical-align: middle;">
                            Name
                        </th>
                        <th class="text-center" style="vertical-align: middle;">
                            User Name / Email
                        </th>
                        <th class="text-center" style="vertical-align: middle;">
                            Phone No.
                        </th>
                        <th class="text-center" style="vertical-align: middle;">
                            Role
                        </th>
                        <th class="text-center" style="vertical-align: middle;">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.UserList)
                    {
                        <tr>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Name)
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.UserRole)
                            </td>
                            <td class="text-center" style="width: 100px;">
                                <div style="float: right;">
                                    <div style="float:left; padding-right: 8px;">
                                        <form method="post" action="@Url.Action("resendemail","useradmin", new { area = "" })" data-kw-ajax="true" data-kw-target="#DataGrid">
                                            @Html.Hidden("id", item.Id)
                                            @Html.AntiForgeryToken()
                                            <a href="@Url.Action("resendemail", new { id = item.Id })" class="resend" data-toggle="tooltip" data-placement="bottom" title="Resend Email">
                                                <i class="glyphicon glyphicon-share-alt"></i>
                                            </a>
                                        </form>
                                    </div>
                                    <div style="float:left; padding-right: 8px;">
                                        <div style="float:left; padding-right: 8px;">
                                            <a href="@Url.Action("Edit", new {  ID = item.Id })" data-toggle="tooltip" data-placement="bottom" title="Edit">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div style="float:left; padding-right: 10px;">
                                        <form method="post" action="@Url.Action("delete", "useradmin", new { area = "" })" data-kw-ajax="true" data-kw-target="#DataGrid">
                                            @Html.Hidden("id", item.Id)
                                            @Html.AntiForgeryToken()

                                            <a href="@Url.Action("delete", new { id = item.Id,PgNo=@Model.PagingInfo.CurrentPage,PgSize=@Model.PagingInfo.ItemsPerPage,ListCount=@Model.UserList.Count(),Email=item.Email })" class="delete" data-toggle="tooltip" data-placement="bottom" title="Delete">
                                                <i class="glyphicon glyphicon-trash"></i>
                                            </a>
                                        </form>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="ns-grid-pager" data-otf-target="#DataGrid">
            <div class="hidden-xs col-md-3 col-sm-3">
                @Model.PagingInfo.TotalItems Record(s)
            </div>
            <div class="visible-lg visible-md visible-sm visible-xs col-md-9 col-sm-9 ns-pagination" data-kw-target="#DataGrid" data-kw-actionlink="/useradmin/list">
                @Html.PageLinks(Model.PagingInfo, x => Url.Action("list", "useradmin", new { PageNo = x, PageSize = Model.PagingInfo.ItemsPerPage }))
            </div>
        </div>
    }
    else
    {
        <h3>No record found...</h3>
    }
</div>
@*error message*@
<div id="ErrMsg" style="display:none;">
    <input type="hidden" id="ErrMsgHiddenField" name="ErrMsg" value="@TempData["ErrMsg"]" />
</div>
<div id="MailMsg" style="display:none;">
    <input type="hidden" id="MailMsgHiddenField" name="MailMsg" value="@TempData["MailMsg"]" />
</div>



