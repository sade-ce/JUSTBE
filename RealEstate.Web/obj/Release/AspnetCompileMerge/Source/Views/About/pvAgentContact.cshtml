@model RealEstate.Entities.Models.utblMstAgentContacts
@using (Html.BeginForm("AgentContact", "About", FormMethod.Post, new { id = "contact-form", @class = "contact-form style-2" }))
{
    @Html.ValidationSummary(true)

    <div class="text-danger " id="ErrorView"></div>
    <div class="form-row">
        <div class="form-col-2">
            @Html.ValidationMessageFor(m => m.ContactPerson, "", new { @class = "text-danger" })
            @Html.TextBoxFor(model => model.ContactPerson, new { @placeholder = "Name", @required = "required" })
        </div>
        <div class="form-col-2">

            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            @Html.TextBoxFor(model => model.Email, new { @required = "required", @placeholder = "Email Address", @type = "email" })

        </div>
    </div>
    <div class="form-row">
        <div class="form-col-2">
            @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
            @Html.TextBoxFor(model => model.Phone, new { @placeholder = "Phone", @required = "required" })
        </div>
        <div class="form-col-2">

            @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger" })
            @Html.TextBoxFor(model => model.Subject, new { @required = "required", @placeholder = "Subject" })

        </div>
    </div>
    <div class="form-row">
        <div class="form-col">
            @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
            @Html.TextAreaFor(model => model.Message, new { @required = "required", @class = "validate-required validate-email", @placeholder = "Message" })

        </div>
    </div>
    <input type="submit" class="btn style-3" data-type="submit" id="submit" value="Send Inquiry" />

}