
@model RealEstate.Entities.Models.utblMstContact
@using (Html.BeginForm("JayContact", "MyDeal", FormMethod.Post, new { id = "contact-form", @class = "contact-form" }))
{
    @Html.ValidationSummary(true)    <!-- /.col-* -->
    @Html.HiddenFor(m => m.ContactPerson)
    @Html.HiddenFor(m => m.Email)
    @Html.HiddenFor(m => m.ContactDate)

    <div class="col-sm-8 col-md-offset-2">
        <div class="form-group">
            <div class="text-danger " id="ErrorView"></div>

            <label>Message</label>
            @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
            @Html.TextAreaFor(model => model.Message, new { @class = "form-control", @rows = "10", @placeholder = "Please keep your message as simple as possible." })
        </div><!-- /.form-group -->
    </div><!-- /.col-* -->

    <div class="col-sm-10">
        <div class="form-group-btn">
            <button class="btn btn-primary pull-right">Send Message</button>
        </div><!-- /.form-group-btn -->
    </div><!-- /.col-* -->
}
