@model Yelp.Api.Models.SearchResponse

@{
    ViewBag.Title = "Testingview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="parallax titlebar"
     data-background="../../img/home-parallax.jpg"
     data-color="#333333"
     data-color-opacity="0.7"
     data-img-width="800"
     data-img-height="505">
    <div id="titlebar">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>Listings</h2>
                    <span>Grid Layout With Sidebar</span>

                    <!-- Breadcrumbs -->
                    <nav id="breadcrumbs">
                        <ul>
                            <li><a href="#">Home</a></li>
                            <li>Listings</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container">
    <div class="row sticky-wrapper">
        <div class="col-md-8">
            <!-- Sorting / Layout Switcher -->
            <div class="main-search-input margin-bottom-35">
                <input type="text" class="ico-01" placeholder="Enter address e.g. street, city and state or zip" value="" />
                <button class="button">Search</button>
            </div>

            <div class="row margin-bottom-15">
                
                <div class="col-md-12">
                    <!-- Layout Switcher -->
                    <div class="layout-switcher">
                        <a href="#" class="list"><i class="fa fa-th-list"></i></a>
                        <a href="#" class="grid"><i class="fa fa-th-large"></i></a>
                        <a href="#" class="grid-three"><i class="fa fa-th"></i></a>
                    </div>
                </div>
            </div>

            <div class="listings-container list-layout">
                @foreach (var item in Model.Businesses)
                {

                    <div class="listing-item">
                        <a href="@item.Url" target="_blank" class="listing-img-container">
                                <div class="listing-badges">
                                   @if (item.IsClaimed == true)
                                   {
                                    <span class="featured">Not Verified</span>

                                   }
                                   else
                                   {
                                    <span class="featured">Verified</span>
                                   }
                                    <span>
                                        @item.Rating ★
                                </span>
                            </div>
                            

                            <div class="listing-img-content">
                                <span class="listing-price">@item.ReviewCount<i>Reviews</i></span>
                                <span class="listing-price pull-right">@item.DistanceAway Miles</span>

                            </div>
                            <div class="listing-carousel">
                                <div><img src="@item.ImageUrl" alt="" width="313" height="241"></div>
                                
                            </div>
                        </a>

                        <div class="listing-content">
                            <div class="listing-title">
                                <h4><a href="@item.Url" target="_blank">@item.Name</a></h4>
                                <a href="https://maps.google.com/maps?q=221B+Baker+Street,+London,+United+Kingdom&amp;hl=en&amp;t=v&amp;hnear=221B+Baker+St,+London+NW1+6XE,+United+Kingdom" class="listing-address popup-gmaps">
                                    <i class="fa fa-map-marker"></i>

                                    @foreach(var Loc in item.Location.DisplayAddress)
                                    {
                                        <span>@Loc</span>
                                    }


                                    @* @item.Location.Address1 @item.Location.Address2 @item.Location.Address3 ,@item.Location.City*@
                                </a>
                                <a href="@item.Url" target="_blank" class="details button border">Details</a>
                            </div>

                            
                            <ul class="listing-details">
                                @foreach (var Categories in item.Categories)
                                {
                                    <li>@Categories.Title</li>
                                }
                                
                                
                            </ul>
                            <div class="listing-footer">
                                <a href="tel:@item.Phone"><i class="fa fa-phone-square"></i>@item.DisplayPhone</a>

                                @if (item.IsClosed == true)
                                {
                                    <span><i class="fa fa-calendar-o"></i>Closed now</span>
                                }

                                else
                                {
                                    <span><i class="fa fa-calendar-o"></i>Open now</span>
                                }

                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="clearfix"></div>

        </div>


        <div class="col-md-4">
            <div class="sidebar sticky right">
                <!-- Widget -->
                <div class="widget margin-bottom-40">
                    <h3 class="margin-top-0 margin-bottom-35">Search for services</h3>
                    <div class="row with-forms">
                        <div class="col-md-12">
                            <a class="button fullwidth margin-top-30">Banks</a>
                            <a class="button fullwidth margin-top-30">Lenders</a>
                            <a class="button fullwidth margin-top-30">Movers</a>
                            <a class="button fullwidth margin-top-30">Stagers</a>
                            <a class="button fullwidth margin-top-30">Plumbers</a>
                            <a class="button fullwidth margin-top-30">Electricians</a>
                            <a class="button fullwidth margin-top-30">General Contractors</a>
                            <a class="button fullwidth margin-top-30">Blinds Providers</a>
                            <a class="button fullwidth margin-top-30">Home Insurers</a>

                        </div>
                    </div>
                    <br>
                    

                </div>
                <!-- Widget / End -->
            </div>
        </div>

    </div>
</div>

@section Scripts{
    
    
    }
<style>
    .listing-img-container img {
    width: 100%;
    height:347px !important;
}
</style>
