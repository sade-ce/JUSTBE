@model RealEstate.Entities.ViewModels.MstClientMLSHomeListing
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_RealEstate.cshtml";
}

<section class="content-header">
    <h1>
        Home Listing
        <small>Add New</small>
    </h1>
</section>
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <div class="box-body">
                <div class="col-md-11">
                    <div class="col-md-10 col-lg-offset-3">
                        <div class="col-md-5">
                            Client Name: <strong>@Model.MstInfoView.Name</strong>
                        </div>
                        <div class="col-md-5">
                            Client Email: <strong>@Model.MstInfoView.Email</strong>
                        </div>
                    </div>
                    <hr />
                    <div class="clearfix"></div>
                </div>
                @Html.Partial("pvClientHomeList", Model)
            </div>
        </div>
    </div>

</section>
@*error message*@
<div id="ErrMsg" style="display:none;">
    <input type="hidden" id="ErrMsgHiddenField" name="ErrMsg" value="@TempData["ErrMsg"]" />
</div>
@section Scripts
{
<script src="~/Content/Plugins/Select2/select2.min.js"></script>
<script type="text/javascript">
        $(document).ready(function () {
            $("#utblMstClientHomeListing_ListingTypeID").select2();

        });
</script>
<script type="text/javascript">

    $(document).ready(function () {
        $('#utblMstClientHomeListing_ListingTypeID').on('change', function () {
            var ListingType = "MLS"
            var DDLText = document.getElementById("utblMstClientHomeListing_ListingTypeID").options[document.getElementById('utblMstClientHomeListing_ListingTypeID').selectedIndex].text;
            if (ListingType == DDLText) {
                $("#utblMstClientHomeListing_Address").attr('disabled', 'disabled');
                $("#utblMstClientHomeListing_Address").val("");
                $("#utblMstClientHomeListing_URL").attr('disabled', 'disabled');
                $("#utblMstClientHomeListing_URL").val("");

                $("#utblMstClientHomeListing_MLSID").removeAttr('disabled');

            }
           else if ("Private" == DDLText) {

               $("#utblMstClientHomeListing_MLSID").attr('disabled', 'disabled');
               $("#utblMstClientHomeListing_MLSID").val("");

                $("#utblMstClientHomeListing_Address").removeAttr('disabled');
                $("#utblMstClientHomeListing_URL").removeAttr('disabled');

            }
            else
            {
                $("#utblMstClientHomeListing_MLSID").removeAttr('disabled');
                $("#utblMstClientHomeListing_Address").removeAttr('disabled');
                $("#utblMstClientHomeListing_URL").removeAttr('disabled');
            }

        });
    });

</script>

    
 }