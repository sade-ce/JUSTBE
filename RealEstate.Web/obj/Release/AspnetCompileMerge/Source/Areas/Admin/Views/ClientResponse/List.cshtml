@model RealEstate.Entities.ViewModels.MstClientRespondAdminManageModel

@{
    ViewBag.Title = "Client Responded";
    Layout = "~/Areas/Admin/Views/Shared/_RealEstate.cshtml";
}

<div class="col-md-12">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Client Responses</h3>
        </div>
        <div>

            <!-- Content Header (Page header) -->
            <section class="content-header"></section>
            <div class="col-md-12">

                <div class="well well-sm">
                    <div class="col-md-9 pull-left col-5 col-xs-7">
                        <form method="get" action="@Url.Action("List")" data-kw-ajax="true" data-kw-target="#DataGrid">
                            <div class="input-group">
                                <input type="text" name="searchTerm" class="form-control" id="inputsearch" placeholder="Search by TrackingID, Status or Date ..." />
                                <span class="input-group-btn">
                                    <button class="btn btn-danger pull-left" type="submit" id="search" value="Search By Name">Go!</button>
                                </span>
                            </div>
                        </form>
                    </div>
                    @Html.ActionLink("Clear Results", "List", null, new { @class = "btn btn-primary", id = "clear" })
                    <div class="clearfix"></div>
                </div>

                @Html.Partial("pvClientRespond", Model)
            </div>
            <!-- /.content -->
            <div class="clearfix"></div>

        </div>
    </div>

</div>


<style type="text/css">
    .box {
        border-top: 0px solid #fff;
    }
</style>
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#clear").addClass("hidden");
            $("#search").on("click", function (e) {
                if ($("#inputsearch").val() != "") {
                    $("#clear").removeClass("hidden");
                }
                else {
                    $("#clear").addClass("hidden");
                }
            });
        });
    </script>
}




