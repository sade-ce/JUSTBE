@model RealEstate.Entities.ViewModels.MstCalenderManageModel



<div id="DataGrid" class="col-left-nil col-right-nil">
    @if (Model.MstAppointmentList.Count() > 0)
    {
        <div class="table-responsive" style="overflow-x:visible;">
            <table class="table table-striped table-condensed table-bordered table-responsive">
                <thead>
                    <tr>
                        <th class="text-center" style="vertical-align: middle;">
                            Description
                        </th>
                        <th class="text-center" style="vertical-align: middle;">
                            Client
                        </th>
                        <th class="text-center" style="vertical-align:middle;">
                            Start Date Time
                        </th>
                        <th class="text-center" style="vertical-align:middle;">
                            End Date Time
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.MstAppointmentList)
                    {
                        <tr  style="color:white;background-color:@item.color">
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td class="text-center">
                                @item.StartDate.ToString("dd MMM yyyy HH:mm")


                            </td>
                            <td class="text-center">
                                @item.EndDate.ToString("dd MMM yyyy HH:mm")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="ns-grid-pager" data-kw-target="#DataGrid">
            <div class="hidden-xs col-md-3 col-sm-3">
                @Model.PagingInfo.TotalItems &nbsp;Record(s)
            </div>
            <div class="visible-lg visible-md visible-sm visible-xs col-md-9 col-sm-9 ns-pagination text-right" data-kw-target="#DataGrid" data-kw-actionlink="/Coordinator/Calendly/AllSchedule">
                @Html.PageLinks(Model.PagingInfo, x => Url.Action("AllSchedule", new { PageNo = x, PageSize = Model.PagingInfo.ItemsPerPage }))
            </div>
        </div>
    }
    else
    {
        <h3>No client record found...</h3>
    }
</div>
@*error message*@


<div id="ErrMsg" style="display:none;">
    <input type="hidden" id="ErrMsgHiddenField" name="ErrMsg" value="@TempData["ErrMsg"]" />
</div>
