@model RealEstate.Entities.ViewModels.MstDealAgentManageModel
<div id="DataGrid" class="col-md-12">

    <div class="margin-top-20" >

        
        <div class="modal-body">
            <section class="content-header">
                <div class="form-horizontal">
                    @if (Model.SharedClientList.Count() > 0)
                    {
                    <div class="row">

                        @foreach (var item in Model.SharedClientList)
                            {
                        <div class="col-md-3">
                            <div class="box box-primary">
                                <div class="box-body box-profile">

                                    @if (item.Photos == null || item.Photos == "")
                                            {
                                    <img class="profile-user-img img-responsive img-bordered" src="https://justbere-d4d9.kxcdn.com/img/NoImage.png" alt="User profile picture" style="height:210px;width:220px">
                                            }
                                            else
                                            {
                                    <img class="profile-user-img img-responsive img-bordered" src="@item.Photos" alt="User profile picture" style="height:210px;width:220px">

                                            }

                                    <ul class="list-group list-group-unbordered">
                                        <li class="list-group-item text-center">
                                            <b>@item.Name</b>
                                        </li>
                                        <li class="list-group-item text-center">
                                            <b>@item.Email</b>
                                        </li>
                                        <li class="list-group-item text-center">
                                            <b>@item.Phone</b>
                                        </li>
                                    </ul>
                                    @Html.ActionLink("Manage", "ClientDetails", new { ClientID = item.ClientID }, new { @class = "btn btn-primary btn-block" })
                                </div>
                            </div>
                        </div>

                            }
                    </div>

                    }

                    else
                    {
                    <h1>No Records Found</h1>
                    }
                </div>
            </section>

        </div>
    </div>
</div>
<div id="ErrMsg" style="display:none;">
    <input type="hidden" id="ErrMsgHiddenField" name="ErrMsg" value="@TempData["ErrMsg"]" />
</div>

