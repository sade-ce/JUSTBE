@model RealEstate.Entities.ViewModels.MstDealAgentManageModel
<div id="DataGrid" class="col-md-12">

    <div class="margin-top-20" >

        
        <div class="modal-body">
            <section class="content-header">
                <div class="form-horizontal">
                    @if (Model.SharedDealList.Count() > 0)
                    {
                    <div class="row">

                        @foreach (var item in Model.SharedDealList)
                            {
                        <div class="col-md-3">
                            <div class="box box-primary">
                                <div class="box-body box-profile">

                                    @if (item.ClientPhoto == null || item.ClientPhoto == "")
                                            {
                                    <img class="profile-user-img img-responsive img-bordered" src="https://justbere-d4d9.kxcdn.com/img/NoImage.png" alt="User profile picture" style="height:210px;width:220px">
                                            }
                                            else
                                            {
                                    <img class="profile-user-img img-responsive img-bordered" src="@item.ClientPhoto" alt="User profile picture" style="height:210px;width:220px">

                                            }

                                    <ul class="list-group list-group-unbordered">
                                        <li class="list-group-item text-center">
                                            <b>@item.ClientName</b>
                                        </li>
                                        <li class="list-group-item text-center">
                                            <b>Type: @item.ClientType</b>
                                        </li>
                                        <li class="list-group-item text-center">
                                            <b>#TID: @item.TransactionID</b>
                                        </li>
                                        <li class="list-group-item text-center">
                                            <b>Agent: @item.AgentName</b>
                                        </li>
                                    </ul>
                                    <form method="post" action="@Url.Action("RemoveShared", "DealAgent",new { area = "Coordinator" })" data-kw-ajax="true" data-kw-target="#DataGrid">
                                        @Html.AntiForgeryToken()
                                        <a href="@Url.Action("RemoveShared", new { TransactionID = item.TransactionID})" class="btn btn-primary btn-block delete" data-toggle="tooltip" data-placement="bottom" title="Delete ">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </form>
                                </div>
                            </div>
                        </div>

                            }
                    </div>

                    }

                    else
                    {
                    <h1>No Records Found</h1>
                    }
                </div>
            </section>

        </div>
    </div>
</div>
<div id="ErrMsg" style="display:none;">
    <input type="hidden" id="ErrMsgHiddenField" name="ErrMsg" value="@TempData["ErrMsg"]" />
</div>

