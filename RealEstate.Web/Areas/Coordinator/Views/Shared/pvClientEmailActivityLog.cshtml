@model RealEstate.Entities.ViewModels.MstActivityLogViewModel

@if (Model.ActivityLogView.Count() > 0)
{

    <h3 class="control-sidebar-heading">Recent Activity</h3>
    <ul class="control-sidebar-menu">

        @foreach (var item in Model.ActivityLogView)
        {
            <li>
                <a href="javascript:void(0)">
                    <i class="menu-icon fa fa-envelope-o bg-light-blue"></i>
                    <div class="menu-info">
                        <h4 class="control-sidebar-subheading">@item.Name @item.Remarks @item.TrackingSource</h4>
                        @{
                            string[] values = item.ActivityTitle.Split(',');
                            for (int i = 0; i < values.Length; i++)
                            {
                                <p>@values[i].Trim()</p>
                            }
                        }

                        <p>@item.TrackingDate.ToString("dd MMMM yyyy hh:mm tt")</p>

                    </div>
                </a>
            </li>
          }


    </ul>

    }

else
{
 <h3 class="control-sidebar-heading">No logs from client activity</h3>
}
