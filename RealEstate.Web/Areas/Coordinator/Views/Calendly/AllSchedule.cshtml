@model RealEstate.Entities.ViewModels.MstCalenderManageModel

@{
    ViewBag.Title = "AllSchedule";
    Layout = "~/Areas/Coordinator/Views/Shared/_AgentLayout.cshtml";
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Areas/Admin/Views/Shared/_RealEstate.cshtml";

    }
}

<section class="content-header">
    <h1>
        All Schedule
        <small>List</small>
    </h1>
</section>
<div class="content">
    <div class="col-md-12">
        <div class="well well-sm">
            <div class="col-md-9 pull-left col-5">
                <form method="get" action="@Url.Action("AllSchedule")" data-kw-ajax="true" data-kw-target="#DataGrid">
                    <div class="input-group">
                        <input type="text" name="searchTerm" class="form-control" id="inputsearch" placeholder="Search By Client Name, Email, Event Name or date" />
                        <span class="input-group-btn">
                            <button class="btn btn-danger pull-left" type="submit" id="search" value="Search">Go!</button>
                        </span>
                    </div>
                </form>
            </div>
            @Html.ActionLink("Clear Results", "AllSchedule", null, new { @class = "btn btn-primary", id = "clear" })

            <div class="clearfix"></div>
        </div>
        @Html.Partial("pvRawEventList", Model)
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#clear").addClass("hidden");
            $("#search").on("click", function (e) {
                if ($("#inputsearch").val() != "") {
                    $("#clear").removeClass("hidden");
                }
                else {
                    $("#clear").addClass("hidden");
                }
            });
        });
    </script>

}
