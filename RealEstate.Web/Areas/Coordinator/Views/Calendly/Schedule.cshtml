
@{
    ViewBag.Title = "Schedule";
    Layout = "~/Areas/Coordinator/Views/Shared/_AgentLayout.cshtml";
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Areas/Admin/Views/Shared/_RealEstate.cshtml";

    }
}
<script src="https://justbere-d4d9.kxcdn.com/Scripts/dhtmlxScheduler/ext/dhtmlxscheduler_minical.js"></script>
<link href="https://justbere-d4d9.kxcdn.com/Content/bootstrap.min.css" rel="stylesheet" />
<link href="https://justbere-d4d9.kxcdn.com/Scripts/dhtmlxScheduler/dhtmlxscheduler-responsive.css" rel="stylesheet" />
<script src="https://justbere-d4d9.kxcdn.com/Scripts/dhtmlxScheduler/dhtmlxscheduler-responsive.js"></script>
<section class="content-header">
    <h1>
        Calendar
        <small>Schedule Events</small>
    </h1>
</section>
<div class="content">

    <div class="col-md-12">
        <div class="col-md-3">
            <div style='float: left'>
                <div id="cal_here" style='width:250px;'></div>
            </div>
        </div>
        <div class="col-md-9">
            <div id="scheduler_here" class="dhx_cal_container scheduler_container">
                @Html.Raw(Model.Render())
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div style="margin-top: 15px;">
            <div class="box-footer well well-sm col-md-12 col-lg-12 text-right">
                @*@Html.ActionLink("Previous", "CreateDeal", new { Email = @Model.utblMstTrackDeal.Email }, new { @class = "btn btn-default pull-left" })*@
                @Html.ActionLink("Finish", "Index", "Agent", null, new { @class = "btn btn-primary" })
                <div class="clearfix"></div>
            </div>

        </div>
    </div>
</div>
<style type="text/css" media="screen">
    .scheduler_container {
        width: 100%;
        height: 800px;
        border: 1px solid #aeaeae;
    }
</style>
@section Scripts
{
    <script>
        $(document).ready(function () {
            scheduler.setCurrentView();
            scheduler.setCurrentView(new Date(), "week");

            mygrid = new dhtmlXGridObject('gridbox');
            mygrid.enableDragAndDrop(false);
            mygrid.init();
        });
    </script>
}