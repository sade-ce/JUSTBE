@model RealEstate.Entities.ViewModels.MstClosingConfigurationModel

<div id="DataGrid" class="col-left-nil col-right-nil">
    @if (Model.GetClosingConfig.Count() > 0)
    {
        <div class="table-responsive" style="overflow-x:visible;">
            <table class="table table-striped table-condensed table-bordered table-responsive">
                <thead>
                    <tr>
                        <th class="text-center" style="vertical-align: middle;">
                            StatusID
                        </th>
                        <th class="text-center" style="vertical-align: middle;">
                            Status
                        </th>
                        <th class="text-center" style="vertical-align:middle;">
                            Updated On
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.GetClosingConfig)
                    {
                        <tr>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.StatusID)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.ConfigDate)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <h3>No record found...</h3>
    }
</div>
@*error message*@
<div id="ErrMsg" style="display:none;">
    <input type="hidden" id="ErrMsgHiddenField" name="ErrMsg" value="@TempData["ErrMsg"]" />
</div>