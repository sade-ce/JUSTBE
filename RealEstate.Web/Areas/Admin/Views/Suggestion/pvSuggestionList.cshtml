@model RealEstate.Entities.ViewModels.MstArticleSuggestionManageModel


<div id="DataGrid" class="col-left-nil col-right-nil">
    @if (Model.MstSuggestionList.Count() > 0)
    {<div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
            </div>
            <div class="box-body">
                <div class="table-responsive" style="overflow-x:visible;">
                    <table class="table table-striped table-condensed table-bordered table-responsive">
                        <thead>
                            <tr>
                                <th class=" text-center" style="vertical-align: middle;">
                                    Name
                                </th>
                                <th class="text-center" style="vertical-align: middle;">
                                    Email
                                </th>
                                <th class="text-center" style="vertical-align:middle;">
                                    Phone
                                </th>
                                <th class="text-center" style="vertical-align:middle;">
                                    Message
                                </th>
                                <th class="text-center" style="vertical-align:middle;">
                                    Date
                                </th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.MstSuggestionList)
                            {
                                <tr>
                                    <td class="text-center">
                                        @item.Name
                                    </td>
                                    <td class="text-center">
                                        @item.Email
                                    </td>
                                    @if (!string.IsNullOrEmpty(item.Phone))
                                    {
                                        <td class="text-center">
                                            @item.Phone
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="text-center">
                                           N/A
                                        </td>
                                    }

                                    
                                    <td class="text-center">
                                        @item.Message
                                    </td>
                                    <td class="text-center">
                                        @item.PostedOn.ToString("dd MMM yyyy")
                                    </td>


                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="ns-grid-pager" data-kw-target="#DataGrid">
                    <div class="hidden-xs col-md-3 col-sm-3">
                        @Model.PagingInfo.TotalItems &nbsp;Record(s)
                    </div>
                    <div class="visible-lg visible-md visible-sm visible-xs col-md-9 col-sm-9 ns-pagination text-right" data-kw-target="#DataGrid" data-kw-actionlink="/Admin/Suggestion/List">
                        @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { PageNo = x, PageSize = Model.PagingInfo.ItemsPerPage }))
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
    else
    {
        <h3>No record found...</h3>
    }
</div>
@*error message*@
<div id="ErrMsg" style="display:none;">
    <input type="hidden" id="ErrMsgHiddenField" name="ErrMsg" value="@TempData["ErrMsg"]" />
</div>

