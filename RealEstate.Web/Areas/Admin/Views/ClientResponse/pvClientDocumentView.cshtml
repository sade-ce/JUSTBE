@model RealEstate.Entities.ViewModels.MstClientRespondAdminManageModel

<div id="DataGrid" class="col-md-12">
    <hr class="hr-style" />
    <div class="row"></div>
    @if (Model.DocList.Count() > 0)
    {
        <div class="table-responsive">
            <table class="table table-striped table-condensed table-bordered">
                <thead>
                    <tr>

                        <th class="text-center" style="vertical-align: middle;">
                            Prieview Document
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DocList)
                    {
                        <tr>
                            @if (item.TrackDocFile != "")
                            {
                                <td class="text-center">
                                    <a href="~/UploadedFiles/ClientTrackDeal/@item.ClientTrackDocID@item.TrackDocFile" target="_blank">View/Download</a>
                                </td>
                            }
                            else
                            {
                                <td class="text-center">
                                    <label>Not Available</label>
                                </td>

                            }

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <h3>No Document Uploaded...</h3>
    }


    <div style="margin-top: 15px;">
        <div class="box-footer well well-sm col-md-12 col-lg-12 text-right">
            @*@Html.ActionLink("Previous", "Edit", new { NewsEventID = @Model.utblMstTrackDeal.TrackingID }, new { @class = "btn btn-default pull-left" })*@
            @Html.ActionLink("Finish", "List", null, new { @class = "btn btn-primary" })
            <div class="clearfix"></div>
        </div>
    </div>

</div>

@*error message*@
<div id="ErrMsg" style="display:none;">
    <input type="hidden" id="ErrMsgHiddenField" name="ErrMsg" value="@TempData["ErrMsg"]" />
</div>

