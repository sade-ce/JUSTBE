@model RealEstate.Entities.ViewModels.MstClientRespondAdminManageModel

<div id="DataGrid" class="col-left-nil col-right-nil">
    @if (Model.MstRespondList.Count() > 0)
    {
        <div>
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Recent Transaction</h3>
                </div>
                <div class="box-body">
                    <div class="table-responsive" style="overflow-x:visible;">
                        <table class="table table-striped table-condensed table-bordered table-responsive">
                            <thead>
                                <tr>
                                    <th class="text-center" style="vertical-align: middle;">
                                        TrackingID
                                    </th>
                                    <th class="text-center" style="vertical-align: middle;">
                                        Name
                                    </th>
                                    <th class="text-center" style="vertical-align: middle;">
                                        Email
                                    </th>

                                    <th class="text-center" style="vertical-align: middle;">
                                        Status
                                    </th>
                                    <th class="text-center" style="vertical-align:middle;">
                                        Requested On
                                    </th>

                                    <th class="text-center" style="vertical-align: middle;">
                                        Responded On
                                    </th>
                                    
                                    <th class="text-center" style="vertical-align: middle;">
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.MstRespondList)
                                {
                                    <tr>
                                        <td class="text-center">
                                            @item.TrackingID
                                        </td>
                                        <td class="text-center">
                                            @item.Name
                                        </td>
                                        <td class="text-center">
                                            @item.Email
                                        </td>
                                        <td class="text-center">
                                            @item.Status
                                        </td>                                        

                                        <td class="text-center">
                                            @item.UpdatedOn.ToString("dd MMM yyyy")
                                        </td>

                                        <td class="text-center">
                                            @item.ClientRespondDate.ToString("dd MMM yyyy")
                                        </td>
                                        <td>
                                            <a href="@Url.Action("ViewDocuments", new { TrackingID = item.TrackingID })" data-toggle="tooltip" data-placement="bottom" title="View">
                                                <i class="fa fa-eye">View</i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="ns-grid-pager" data-kw-target="#DataGrid">
                        <div class="hidden-xs col-md-3 col-sm-3">
                            @Model.PagingInfo.TotalItems &nbsp;Record(s)
                        </div>
                        <div class="visible-lg visible-md visible-sm visible-xs col-md-9 col-sm-9 ns-pagination text-right" data-kw-target="#DataGrid" data-kw-actionlink="/Admin/ClientResponse/List">
                            @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { PageNo = x, PageSize = Model.PagingInfo.ItemsPerPage }))
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
    else
    {
        <h3>No record found...</h3>
    }
</div>
@*error message*@
<div id="ErrMsg" style="display:none;">
    <input type="hidden" id="ErrMsgHiddenField" name="ErrMsg" value="@TempData["ErrMsg"]" />
</div>