@model RealEstate.Entities.ViewModels.MstJobDepartmentModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_RealEstate.cshtml";
}

<section class="content-header">
    <h1>
        Job
        <small> Edit Department  </small>
    </h1>
</section>

<div class="col-md-12">
@using (Ajax.BeginForm("DepartmentEdit", "Job", null, new AjaxOptions() { HttpMethod = "POST" }, new { enctype = "multipart/form-data", id = "myform" }))
{
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model=>model.utblMstCareerDepartments.DepartmentID)
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.utblMstCareerDepartments.Position, new { @class = "control-label col-md-3 pull-left" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.utblMstCareerDepartments.Position, new { @class = "form-control", id = "Status" })
                    @Html.ValidationMessageFor(model => model.utblMstCareerDepartments.Position)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.utblMstCareerDepartments.Description, new { @class = "control-label col-md-3 pull-left" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.utblMstCareerDepartments.Description, new { @class = "form-control", id = "Status" })
                    @Html.ValidationMessageFor(model => model.utblMstCareerDepartments.Description)
                </div>
            </div>
            @*<div class="form-group">
                @Html.LabelFor(model => model.utblMstCareerDepartments.TotalPosition, new { @class = "control-label col-md-3 pull-left" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.utblMstCareerDepartments.TotalPosition, new { @class = "form-control", id = "Status" })
                    @Html.ValidationMessageFor(model => model.utblMstCareerDepartments.TotalPosition)
                </div>
            </div>*@
        </div>
        <div class="well well-sm col-md-12 col-lg-12 text-right">
            <div class="form-horizontal">
                @Html.ActionLink("Back to List", "Departmentlist", null, new { @class = "btn btn-default pull-left" })
                <input type="submit" value="Save" id="save" class="btn btn-primary" />
            </div>
        </div>
    }
</div>
@*error message*@
<div id="ErrMsg" style="display:none;">
    <input type="hidden" id="ErrMsgHiddenField" name="ErrMsg" value="@TempData["ErrMsg"]" />
</div>

@section Scripts{
    <script>
        $("#myform").submit(function (e) {
            $("#ajaxLoading").css("display", "block");
            $("#ajaxLoading").css("top", $(window).height() / 1.8);
            $("#ajaxLoading").css("left", $(window).width() / 2);
            $("#ajaxLoading").css("position", "fixed");
            $("#ajax-backdrop").css("display", "block");
        });
</script>
    }