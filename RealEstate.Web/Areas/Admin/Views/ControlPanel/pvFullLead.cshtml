@model RealEstate.Entities.ViewModels.MstFullLeadViewModel


<div id="DataGrid" class="col-left-nil col-right-nil">
    @if (Model.FullLeads.Count() > 0)
    {<div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
            </div>
            <div class="box-body">
                <div class="table-responsive" style="overflow-x:visible;">
                    <table class="table table-striped table-condensed table-bordered table-responsive">
                        <thead>
                            <tr>
                                <th class="text-center" style="vertical-align: middle;">
                                    Address
                                </th>
                                <th class="text-center" style="vertical-align: middle;">
                                    Zip
                                </th>
                                <th class="text-center" style="vertical-align:middle;">
                                    Unit No
                                </th>
                                <th class="text-center" style="vertical-align:middle;">
                                    Name
                                </th>
                                <th class="text-center" style="vertical-align:middle;">
                                    Email ID
                                </th>
                                <th class="text-center" style="vertical-align:middle;">
                                    Phone No
                                </th>
                                <th class="text-center" style="vertical-align: middle;">
                                    Date
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.FullLeads)
                            {
                                <tr>
                                    <td class="text-center">
                                        @item.Address
                                    </td>
                                    <td class="text-center">
                                        @item.CityStateZip
                                    </td>
                                    <td class="text-center">
                                        @item.UnitNo
                                    </td>
                                    <td class="text-center">
                                        @item.Name
                                    </td>
                                    <td class="text-center">
                                        @item.EmailID
                                    </td>
                                    @if (string.IsNullOrEmpty(item.Phone))
                                    {
                                        <td class="text-center">
                                            N/A
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="text-center">
                                            @item.Phone
                                        </td>
                                    }
                                   
                                    <td class="text-center">
                                        @item.VisitedOn.ToString("dd MMM yyyy HH:mm")
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="ns-grid-pager" data-kw-target="#DataGrid">
                    <div class="hidden-xs col-md-3 col-sm-3">
                        @Model.PagingInfo.TotalItems &nbsp;Record(s)
                    </div>
                    <div class="visible-lg visible-md visible-sm visible-xs col-md-9 col-sm-9 ns-pagination text-right" data-kw-target="#DataGrid" data-kw-actionlink="/Admin/ControlPanel/FullLead">
                        @Html.PageLinks(Model.PagingInfo, x => Url.Action("FullLead", new { PageNo = x, PageSize = Model.PagingInfo.ItemsPerPage }))
                    </div>
                </div>
                </div>
            </div>
    </div>
                }
                else
                {
                <h3>No record found...</h3>
                }
            </div>
            @*error message*@
 <div id="ErrMsg" style="display:none;">
                <input type="hidden" id="ErrMsgHiddenField" name="ErrMsg" value="@TempData["ErrMsg"]" />
</div>

