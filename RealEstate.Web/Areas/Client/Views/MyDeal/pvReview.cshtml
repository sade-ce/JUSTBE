@model RealEstate.Entities.Models.VendorsReview

@using (Html.BeginForm("VendorReview", "MyDeal", FormMethod.Post, new { id = "review-form" }))
{

    @Html.ValidationSummary(true)
        @Html.HiddenFor(m => m.Rating, new { @id = "Rating", @value = "0" })
        @Html.HiddenFor(m => m.ClientId)
        @Html.HiddenFor(m => m.VendorId)
        @Html.HiddenFor(m => m.UpdatedOn)
   
    <div id="conform">
     
        <div class="row">
            <div class="col-md-12">
                <div class="text-danger " id="ErrorView" style="color:#e51f1f;font-weight:400"></div>
                <div id="SucessView" style="display:none;text-align:center">
                    <h3 style="color:#0bb7a5!important">Thank you!</h3>
                </div>
                <div class="vetedVendersInner p-20">
                    <p>
                        “If you have used the services of <strong> @ViewBag.Title </strong>, how likely are you to recommend them to your family and friends?
                    </p>
                    <div class="rating" onmouseout="CRateSelected()">

                        <span href="#1" class="starFade" title="Give 5 stars" id="Rate1" onclick="CRate(1)" onmouseover="CRateOver(1)" onmouseout="CRateOut(1)">★</span>

                        <span href="#2" class="starFade" title="Give 4 stars" id="Rate2" onclick="CRate(2)" onmouseover="CRateOver(2)" onmouseout="CRateOut(2)">★</span>

                        <span href="#3" class="starFade" title="Give 3 stars" id="Rate3" onclick="CRate(3)" onmouseover="CRateOver(3)" onmouseout="CRateOut(3)">★</span>

                        <span href="#4" class="starFade" title="Give 2 stars" id="Rate4" onclick="CRate(4)" onmouseover="CRateOver(4)" onmouseout="CRateOut(4)">★</span>

                        <span href="#5" class="starFade" title="Give 1 star" id="Rate5" onclick="CRate(5)" onmouseover="CRateOver(5)" onmouseout="CRateOut(5)">★</span>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Leave a comment</label>
                        @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", @id = "Comment", @rows = "3"})
                    </div>
                    <button id="btnRegister" class="btn btn-darkGray ">Submit</button>


                </div>
            </div>
        </div>
    </div>
    
}
