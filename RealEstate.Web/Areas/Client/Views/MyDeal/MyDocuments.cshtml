@model RealEstate.Entities.ViewModels.MstClientLiveDealViewModel
@{
    ViewBag.Title = "Just BE| My Documents";
    Layout = "~/Areas/Client/Views/Shared/_ClientLayout.cshtml";
}

<style>
    .dashboard-header {
        border-bottom: 1px solid rgba(0,0,0,.08);
        margin: 0 -30px 30px -30px;
        padding: 28px 30px;
    }
</style>



<div class="container-fluid">
    <div class="dashboard-header">
        <h1>My Documents</h1>

    </div>

    <div class="page-header">
        <h1>
            My Deal
        </h1>
        <p>Track your progress and learn about the upcoming steps related to your deal. If you’d like to be notified when a step has been completed, simply update your email preferences by clicking here</p>
    </div>
    <div class="row">




        @if (Model.ClientDoc.Count() > 0)
        {
            foreach (var item in Model.ClientDoc)
            {

                <div class="col-xl-6">
                    <div class="listing-row">
                        <div class="listing-row-inner">
                            @if (@item.TrackDocFile.ToString() == ".jpg")
                            {

                                <div class="listing-row-image" style="background-image: url('../../../../Content/AppDashboard/assets/img/tmp/jpeg.jpg');">
                                </div>
                            }
                            @if (@item.TrackDocFile.ToString() == ".jpeg")
                            {

                                <div class="listing-row-image" style="background-image: url('../../../../Content/AppDashboard/assets/img/tmp/jpeg.jpg');">
                                </div>
                            }
                            @if (@item.TrackDocFile.ToString() == ".pdf")
                            {

                                <div class="listing-row-image" style="background-image: url('../../../../Content/AppDashboard/assets/img/tmp/pdf.jpg');">
                                </div>
                            }
                          
                            @if (@item.TrackDocFile.ToString() == ".doc")
                            {

                                <div class="listing-row-image" style="background-image: url('../../../../Content/AppDashboard/assets/img/tmp/doc.jpg');">
                                </div>
                            }
                            @if (@item.TrackDocFile.ToString() == ".docx")
                            {

                                <div class="listing-row-image" style="background-image: url('../../../../Content/AppDashboard/assets/img/tmp/doc.jpg');">
                                </div>
                            }
                          
                            @if (@item.TrackDocFile.ToString() == ".png")
                            {

                                <div class="listing-row-image" style="background-image: url('../../../../Content/AppDashboard/assets/img/tmp/jpeg.jpg');">
                                </div>
                            }
                            @if (@item.TrackDocFile.ToString() == ".txt")
                            {

                                <div class="listing-row-image" style="background-image: url('../../../../Content/AppDashboard/assets/img/tmp/txt.jpg');">
                                </div>
                            }
                            <div class="listing-row-content">
                                <h3>
                                    <a>@item.FileName</a>
                                </h3>
                                <div class="listing-row-subtitle">

                                </div><!-- /.listing-row-subtitle -->
                                <ul class="listing-row-actions">
                                    <li><a download href="~/UploadedFiles/TrackDeal/@item.DealTrackDocID@item.TrackDocFile" target="_blank"><i class="fa fa-download"></i>Download</a></li>


                                </ul><!-- /.listing-row-actions -->
                            </div><!-- /.listing-row-content -->
                        </div><!-- /.listing-row-inner -->
                    </div><!-- /.listing-row -->
                </div>
            }
        }



        <div class="pagination-wrapper">
            <ul class="pagination">
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item active"><a class="page-link" href="#">3 <span class="sr-only">(current)</span></a></li>
                <li class="page-item"><a class="page-link" href="#">4</a></li>
                <li class="page-item"><a class="page-link" href="#">5</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul><!-- /.pagination -->
        </div><!-- /.pagination-wrapper -->
    </div><!-- /.row -->
</div>
